<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="wrap_content" 
	android:layout_height="wrap_content">
	
	<TextView
		android:id="@+id/add_row_col"
		android:gravity="center_vertical|center_horizontal"
		android:textSize="25px"
		android:textStyle="bold"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content" />

	<EditText
		android:id="@+id/add_row_edit"
		android:layout_below="@+id/add_row_col"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content" />

	<TextView
		android:id="@+id/add_row_progress"
		android:layout_below="@+id/add_row_edit"
		android:gravity="center_vertical|center_horizontal"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content" />
	<!-- 	
	<ProgressBar
		android:layout_below="@+id/add_row_progress"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		style="?android:attr/progressBarStyleHorizontal"
		android:id="@+id/progressbar_Horizontal"
		android:max="100" />
	-->
	<RelativeLayout
		android:layout_below="@+id/add_row_progress"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal"
		android:layout_toRightOf="@+id/refresh" >
   	<Button 
   		android:id="@+id/add_row_prev" 
   		android:layout_alignParentLeft="true"
    	android:layout_width="wrap_content" 
    	android:layout_height="wrap_content"
      	android:text="Prev" />
    <Button 
   		android:id="@+id/add_row_next" 
   		android:layout_toRightOf="@+id/add_row_prev"
    	android:layout_width="wrap_content" 
    	android:layout_height="wrap_content"
      	android:text="Next" />
    <Button 
   		android:id="@+id/add_row_save" 
   		android:layout_toLeftOf="@+id/add_row_cancle"
    	android:layout_width="wrap_content" 
    	android:layout_height="wrap_content" 
      	android:text="Save All" />
     <Button
     	android:id="@+id/add_row_cancle"
     	android:layout_alignParentRight="true"
     	android:layout_width="wrap_content"
     	android:layout_height="wrap_content"
     	android:text="Cancel" />
     </RelativeLayout>
</RelativeLayout>
