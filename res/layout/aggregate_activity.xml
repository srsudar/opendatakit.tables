<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/aggregate_activity_layout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#FFFFFF"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/aggregate_activity_uri_label"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Aggregate URL:" />

    <EditText
        android:id="@+id/aggregate_activity_uri_field"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="http://" />

    <TextView
        android:id="@+id/aggregate_activity_account_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Account:" />

    <Spinner
        android:id="@+id/aggregate_activity_account_list_spinner"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/aggregate_activity_save_settings_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onClickSaveSettings"
        android:text="Save settings" />
    
    <Button
        android:id="@+id/aggregate_activity_authorize_account_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onClickAuthorizeAccount"
        android:text="Authorize account" />
    
    <Button
        android:id="@+id/aggregate_activity_choose_tables_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onClickChooseTables"
        android:text="Choose tables to sync" />

    <Button
        android:id="@+id/aggregate_activity_get_table_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:onClick="onClickDownloadTableFromServer"
        android:text="Download table from server" />

    <Button
        android:id="@+id/aggregate_activity_sync_now_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:onClick="onClickSyncNow"
        android:text="Sync now" />

</LinearLayout>