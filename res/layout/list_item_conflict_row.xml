<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
 	xmlns:android="http://schemas.android.com/apk/res/android"
 	android:id="@+id/list_view_conflict_row"
 	android:layout_width="fill_parent"
 	android:layout_height="wrap_content"
 	android:orientation="vertical" >
    
    <!-- The local row. -->
    <LinearLayout 
        android:id="@+id/list_item_conflict_resolution_local_row"
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/clickable">
        
	    <RadioButton
	        android:id="@+id/list_item_local_radio_button" 
	        android:layout_width="wrap_content"
	        android:focusable="false"
	        android:layout_height="wrap_content"/>
	    
	    <TextView
	        android:id="@+id/list_item_local_text"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content" />
        
    </LinearLayout>
    
    <LinearLayout
	 	android:id="@+id/list_item_conflict_resolution_server_row" 
	 	android:layout_width="fill_parent"
	 	android:orientation="horizontal"
	 	android:layout_height="fill_parent"
	 	android:background="@drawable/clickable" >
 	
	    <RadioButton
	        android:id="@+id/list_item_server_radio_button" 
	        android:layout_width="wrap_content"
	        android:focusable="false"
	        android:layout_height="wrap_content"/>
	    
	    <TextView
	        android:id="@+id/list_item_server_text"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content" />
	    
	</LinearLayout>
            
    
</LinearLayout>	